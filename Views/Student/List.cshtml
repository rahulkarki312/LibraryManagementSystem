@{
}


@model List<LibraryManagementSystem.Models.Entities.Book>

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Author</th>
            <th>Publish Date</th>
            <th>Available</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublishDate</td>
                <td>@book.IsAvailable</td>

                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Burrow" asp-route-bookId="@book.Id">Burrow Book</a>
                </td>

            </tr>
        }
    </tbody>
</table>