@{
}


@model LibraryManagementSystem.Models.Entities.Book

<h1>Edit Book</h1>

@if (Model is null)
{
    <p>No Book Found With This Id</p>
}

else
{

    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Title" />
        </div>

        <div class="mt-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="Author" />
        </div>

        <div class="mt-3">
            <label for="datepicker">Select Publish Date:</label>
            <input asp-for="PublishDate" type="date" class="form-control" id="datepicker" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="available" asp-for="IsAvailable" />
            <label class="form-check-label" for="available">Available</label>
        </div>



        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-controller="Admin" asp-action="Delete">Delete</button>

        </div>


    </form>

   
}





