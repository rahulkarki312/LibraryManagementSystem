@model LibraryManagementSystem.Models.AddBookViewModel

<h1>Add Book</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="mt-3">
        <label class="form-label">Author</label>
        <input type="text" class="form-control" asp-for="Author" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="IsAvailable" asp-for="IsAvailable" />
        <label class="form-check-label" for="IsAvailable">Available</label>
    </div>

    <div class="mt-3">
            <label for="datepicker">Select Publish Date:</label>
            <input asp-for="PublishDate" type="date" class="form-control" id="datepicker">
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>